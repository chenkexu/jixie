<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/liulan_item_bg"
    android:padding="1dp">

    <ImageView
        android:id="@+id/liulanjilu_item_iv"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:src="@mipmap/small" />

    <LinearLayout
        android:id="@+id/liulanjilu_layout_head_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#99000000"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/liulanjilu_layout_headiv"
            android:layout_width="17dp"
            android:layout_height="17dp"
            android:src="@mipmap/small" />

        <TextView
            android:id="@+id/liulanjilu_layout_headname"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:textColor="@color/cffffff"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/liulanjilu_item_chanpinname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liulanjilu_item_iv"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="3dp"
        android:paddingBottom="6dp"
        android:paddingTop="6dp"
        android:textColor="@color/c2a2a2a"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/liulanjilu_item_chanpinjine"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/liulanjilu_item_chanpinname"
        android:ellipsize="end"
        android:maxLines="1"
        android:padding="3dp"
        android:paddingBottom="6dp"
        android:textColor="@color/ccf96a2f"
        android:textSize="15sp" />
</RelativeLayout>