<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="2.5dp">

    <TextView
        android:id="@+id/main_fragment_item_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="2.5dp"
        android:text="@string/qita"
        android:textColor="@color/window_system_color"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/main_fragment_item_iv1"
            android:layout_width="0dp"
            android:layout_height="216dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@mipmap/small" />

        <!-- 右侧的集合-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="216dp"
            android:layout_marginStart="5dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/main_fragment_item_iv2"
                android:layout_width="126dp"
                android:layout_height="104dp"
                android:scaleType="fitXY"
                android:src="@mipmap/small" />

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/main_fragment_item_iv3"
                android:layout_width="126dp"
                android:layout_height="104dp"
                android:scaleType="fitXY"
                android:src="@mipmap/small" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>