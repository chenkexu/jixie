<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <RadioGroup
            android:id="@+id/yundan_layout_radiogroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp">

            <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b1"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:checked="true"
                android:gravity="center"
                android:text="@string/wodebaojia"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b2"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:gravity="center"
                android:text="@string/daizhuanghuo"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b3"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:gravity="center"
                android:text="@string/daixiehuo"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b4"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:gravity="center"
                android:text="@string/daijiesuan"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />

            <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b5"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:gravity="center"
                android:text="@string/yiwancheng"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />

           <!-- <RadioButton
                android:id="@+id/yundan_layout_radiobutton_b6"
                android:layout_width="80dp"
                android:layout_height="48dp"
                android:background="@drawable/yundan_title_text_selecter_xiahua"
                android:button="@null"
                android:gravity="center"
                android:text="@string/all"
                android:textColor="@drawable/yundan_title_text_selecter"
                android:textSize="14sp" />-->
        </RadioGroup>
    </HorizontalScrollView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/cf0efff5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/wodeyundan_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>