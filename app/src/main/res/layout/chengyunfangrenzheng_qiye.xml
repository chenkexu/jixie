<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/window_system_color"
        android:orientation="horizontal"
        android:padding="@dimen/topbar_padding">

        <ImageView
            android:id="@+id/base_top_bar_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="10dp"
            android:paddingTop="3dp"
            android:src="@mipmap/left_btn_white"
            android:visibility="gone" />

        <TextView
            android:id="@+id/base_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/window_topbar_text_color"
            android:textSize="@dimen/topbar_textsize" />

        <TextView
            android:id="@+id/base_top_bar_title_ge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="4dp"
            android:layout_toRightOf="@id/base_top_bar_title"
            android:background="@drawable/chengyunren_geren_bg"
            android:padding="2dp"
            android:text="@string/qi"
            android:textColor="@color/window_topbar_text_color"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/base_top_bar_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="21dp"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/base_top_bar_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/base_top_bar_right2"
            android:visibility="gone" />

        <TextView
            android:id="@+id/base_top_bar_righttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/window_topbar_text_color"
            android:textSize="@dimen/topbar_textsize"
            android:visibility="gone" />
    </RelativeLayout>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:padding="10dp">

        <RadioButton
            android:id="@+id/chengyunfangrenzheng_radiobutton_tijiaoziliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:checked="true"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/huozhurenzheng_tijiaoziliao"
            android:enabled="false"
            android:text="@string/tijiaoziliao"
            android:textColor="@drawable/color_radiobutton_text" />

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@color/ccccccc" />

        <RadioButton
            android:id="@+id/chengyunfangrenzheng_radiobutton_pingtaishenhe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="5dp"
            android:drawableTop="@drawable/huozhurenzheng_pingtaishenhe"
            android:enabled="false"
            android:text="@string/pingtaishenhe"
            android:textColor="@drawable/color_radiobutton_text" />
    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/cf2f2f2" />

    <LinearLayout
        android:id="@+id/chengyunfangrenzheng_container_tijiaoziliao"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:orientation="vertical">

        <EditText
            android:id="@+id/chengyunfangrenzheng_layout_lianxiren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:hint="@string/lianxiren"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/c999999"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/chengyunfangrenzheng_layout_jinjilianxihaoma"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:hint="@string/jinjilianxihaoma"
            android:maxLines="1"
            android:inputType="number"
            android:padding="10dp"
            android:textColorHint="@color/c999999"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/chengyunfangrenzheng_layout_qiyemingcheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:hint="@string/qiyemingcheng"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/c999999"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/yingyezhizhao"
                android:textColor="@color/c999999"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chengyunfangrenzheng_layout_yingyezhizhao_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:padding="10dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/daoluyunshuxukezheng"
                android:textColor="@color/c999999"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/chengyunfangrenzheng_layout_daoluxukezheng_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/phone" />
        </LinearLayout>

        <EditText
            android:id="@+id/chengyunfangrenzheng_layout_daoluxukezhenghao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="17dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/yinying_bg"
            android:hint="@string/daoluyunshuxukezhenghao"
            android:maxLines="1"
            android:padding="10dp"
            android:textColorHint="@color/c999999"
            android:textSize="16sp" />


        <Button
            android:id="@+id/chengyunfangrenzheng_layout_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:background="@drawable/small_yuanjiao_bg"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="@string/tijiaoziliao"
            android:textColor="@color/cffffff"
            android:textSize="18sp" />
    </LinearLayout>
    <!--正在审核 -->
    <LinearLayout
        android:id="@+id/chengyunfangrenzheng_container_zhengzaishenhe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="200dp"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nindeziliaoyitijiaozhipingtai"
            android:textColor="@color/window_system_color"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dengdaishenhe"
            android:textColor="@color/window_system_color"
            android:textSize="17sp" />

    </LinearLayout>

    <!--审核通过-->
    <LinearLayout
        android:id="@+id/chengyunfangrenzheng_container_shenghetongguo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/shenheyitongguo"
            android:textColor="@color/window_system_color"
            android:textSize="17sp" />


        <Button
            android:id="@+id/chengyunfangrenzheng_layout_qujiedan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="100dp"
            android:background="@drawable/small_yuanjiao_bg"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="@string/qujiedan"
            android:textColor="@color/cffffff"
            android:textSize="18sp" />

    </LinearLayout>

    <!--审核未通过-->
    <LinearLayout
        android:id="@+id/chengyunfangrenzheng_container_shengheweitongguo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/shenheweitongguo"
            android:textColor="@color/cf23030"
            android:textSize="17sp" />

        <Button
            android:id="@+id/chengyunfangrenzheng_layout_chongxintijiaoziliao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="100dp"
            android:background="@drawable/small_yuanjiao_bg"
            android:paddingLeft="100dp"
            android:paddingRight="100dp"
            android:text="@string/chongxintijiaoziliao"
            android:textColor="@color/cffffff"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>