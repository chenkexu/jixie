<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#99000000">

    <View
        android:id="@+id/chengyunrenrenzheng_dialog_item_fuzhuxian"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/chengyunrenrenzheng_dialog_item_fuzhuxian"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/huoyun_wode_getichengyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/getichengyun"
            android:text="@string/getichengyunren"
            android:textColor="@color/cffffff"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/huoyun_wode_qiyechengyun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:button="@null"
            android:drawablePadding="4dp"
            android:drawableTop="@mipmap/qiyechengyun"
            android:text="@string/qiyechengyunren"
            android:textColor="@color/cffffff"
            android:textSize="15sp" />

    </LinearLayout>


    <ImageView
        android:id="@+id/huoyun_wode_guanbidialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chengyunrenrenzheng_dialog_item_fuzhuxian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:src="@mipmap/guanbi" />
</RelativeLayout>