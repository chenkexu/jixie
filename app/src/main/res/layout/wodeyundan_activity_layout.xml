<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <RadioGroup
        android:id="@+id/wodeyundan_layout_radiogroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/wodeyundan_layout_wodefabu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodeyundan_selecter"
            android:button="@null"
            android:checked="true"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/wodefabu"
            android:textColor="@drawable/color_radiobutton_text"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/wodeyundan_layout_daifahuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodeyundan_selecter"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/daifahuo"
            android:textColor="@drawable/color_radiobutton_text"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/wodeyundan_layout_daishouhuo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodeyundan_selecter"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/daishouhuo"
            android:textColor="@drawable/color_radiobutton_text"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/wodeyundan_layout_yiwancheng"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodeyundan_selecter"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/yiwancheng"
            android:textColor="@drawable/color_radiobutton_text"
            android:textSize="15sp" />

        <RadioButton
            android:id="@+id/wodeyundan_layout_quanbu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/wodeyundan_selecter"
            android:button="@null"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:text="@string/all"
            android:textColor="@drawable/color_radiobutton_text"
            android:textSize="15sp" />

    </RadioGroup>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cddd" />

    <View
        android:layout_width="match_parent"
        android:layout_height="6dp"
        android:background="@color/cf0efff5" />

    <android.support.v4.view.ViewPager
        android:id="@+id/wodedingdan_layout_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>