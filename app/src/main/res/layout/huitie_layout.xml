<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/huitie_layout_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/yinying_bg"
                android:gravity="top"
                android:hint="@string/huifuneirong"
                android:minLines="10"
                android:padding="5dp"
                android:textColorHint="@color/fatie_hint_color"
                android:textSize="13sp" />

            <com.qmwl.zyjx.view.NoScroolGridView
                android:id="@+id/huitie_activity_gridview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="8dp"
                android:horizontalSpacing="3dp"
                android:numColumns="3"
                android:verticalSpacing="3dp" />

            <Button
                android:id="@+id/huitie_layout_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/xiaojiao_5dp_button_background"
                android:text="@string/tijiao"
                android:textColor="@color/cffffff"
                android:textSize="14sp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>