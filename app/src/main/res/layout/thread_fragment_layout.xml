<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cf0efff5"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <ListView
        android:id="@+id/shopping_layout_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:divider="@color/cf0efff5"
        android:dividerHeight="10dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/cffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <CheckBox
            android:id="@+id/shopping_layout_quanxuan"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:button="@null"
            android:drawableLeft="@drawable/radiobutton_duihao_selecter"
            android:drawablePadding="10dp"
            android:scaleType="center"
            android:text="@string/quanxuan"
            android:textColor="@color/c363636"
            android:textSize="14sp" />


        <TextView
            android:id="@+id/shopping_layout_price_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/heji"
            android:textColor="@color/c363636"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/shopping_layout_jiesuan"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/cfe0101"
            android:gravity="center"
            android:text="@string/jiesuan"
            android:textColor="@color/cffffff"
            android:textSize="14sp" />
    </LinearLayout>

</LinearLayout>