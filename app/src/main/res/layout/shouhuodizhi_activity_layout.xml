<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/ce3e3e3" />

    <ListView
        android:id="@+id/shouhuodizhi_layout_address_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@color/cffffff"
        android:scrollbars="none" />

    <Button
        android:id="@+id/address_layout_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/small_yuanjiao_bg"
        android:text="@string/tianjiashouhuodizhi"
        android:textColor="@color/cffffff" />
</LinearLayout>