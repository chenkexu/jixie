<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/allpingjia_layout_item_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@mipmap/small" />

        <TextView
            android:id="@+id/allpingjia_layout_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小明"
            android:textColor="@color/c363636"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/allpingjia_layout_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="2017-05-02"
            android:textColor="@color/c797979"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/allpingjia_layout_item_model"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="1"
            android:text="型号:TL28569"
            android:textColor="@color/c797979"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/allpingjia_layout_item_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="机器质量很好，机器质量很好，机器质量很好，机器质量很好，机器质量很好，机器质量很好，"
        android:textColor="@color/c363636"
        android:textSize="14sp" />

</LinearLayout>