<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cf6f6f6"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/message_layout_swiprefreshlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@+id/messages_layout_listview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@color/cffffff"
            android:divider="@drawable/message_divider_bg"
            android:dividerHeight="1px"
            android:scrollbars="none" />
    </android.support.v4.widget.SwipeRefreshLayout>


</LinearLayout>