<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/tuikuan_item_head_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/small" />

        <TextView
            android:id="@+id/tuikuan_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="小明"
            android:textColor="@color/c242424"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cf2f2f2"
        android:padding="10dp"
        android:paddingLeft="15dp">

        <ImageView
            android:id="@+id/tuikuan_item_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:src="@mipmap/small" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_marginLeft="13dp"
            android:layout_toRightOf="@id/tuikuan_item_iv"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tuikuan_item_shop_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="山东临工SDLG全液压双缸压路机8140E"
                android:textColor="@color/c242424"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tuikuan_item_shop_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:maxLines="1"
                android:text="产品型号:STR130-6"
                android:textColor="@color/c797979"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/tuikuan_item_tuikuanjine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:maxLines="1"
            android:text="退款金额:￥666666"
            android:textColor="@color/cfba000"
            android:textSize="12sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ceeeeee" />

    <TextView
        android:id="@+id/tuikuan_item_statue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="退款退货\u0020\u0020退款成功"
        android:textColor="@color/c000" />

</LinearLayout>