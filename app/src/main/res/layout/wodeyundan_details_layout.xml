<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <WebView
        android:id="@+id/huoyuandetails_layout_webview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:overScrollMode="never" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/ccccccc" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end|center_vertical"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/yundan_details_layout_lijibaojia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/huoyuanxiangqing_button"
            android:padding="8dp"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="@string/lijibaojia"
            android:textColor="@color/cffffff"
            android:textSize="13sp" />

    </LinearLayout>
</LinearLayout>