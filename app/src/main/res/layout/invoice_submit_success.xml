<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:gravity="center_horizontal"
    android:background="@mipmap/icon_remind"
    android:paddingBottom="10dp"
    android:orientation="vertical">

    <TextView
        android:layout_centerInParent="true"
        android:layout_marginBottom="20dp"
        android:textStyle="bold"
        android:layout_below="@id/tv_elect_invoice"
        android:gravity="center"
        android:id="@+id/tv_paper_invoice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/invoice_submit_sunccess"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:layout_margin="30dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/btn_selec"
        android:textStyle="bold"
        android:layout_below="@id/tv_elect_invoice"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/submmit"
        android:textColor="@color/white"
        android:textSize="20sp" />

</RelativeLayout>



