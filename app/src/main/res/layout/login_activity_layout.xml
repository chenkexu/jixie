<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <include layout="@layout/base_top_bar_center" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        android:paddingTop="30dp">

        <ImageView
            android:layout_width="76dp"
            android:layout_height="76dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/logo" />
    </RelativeLayout>

    <EditText
        android:id="@+id/login_edittext_username"
        style="@style/xiahuaxian_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="10dp"
        android:hint="@string/huiyuanming"
        android:maxLines="1"
        android:textColor="@color/c333333"
        android:textColorHint="@color/cb7b7b7"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/login_edittext_password"
        style="@style/xiahuaxian_edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="39dp"
        android:hint="@string/qingshurumima"
        android:inputType="textPassword"
        android:maxLines="1"
        android:textColor="@color/c333333"
        android:textColorHint="@color/cb7b7b7"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="37dp"
        android:layout_marginTop="10dp"
        android:gravity="end|center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/login_wanjimima_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="@string/wangjimima"
            android:textColor="@color/c333333"
            android:textSize="15sp" />
    </LinearLayout>

    <Button
        android:id="@+id/login_login_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/tiezi_details_fasong_bg"
        android:text="@string/login"
        android:textColor="@color/cffffff"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="15dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/login_geren_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tiezi_details_fasong_bg"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/register"
            android:textColor="@color/cffffff"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/login_qiye_register"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/tiezi_details_fasong_bg"
            android:gravity="center"
            android:padding="10dp"
            android:visibility="gone"
            android:text="@string/woyaokaidian"
            android:textColor="@color/cffffff"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>