<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <com.qmwl.zyjx.view.CircularImage
            android:id="@+id/zuling_layout_item_head_iv"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@mipmap/small" />

        <TextView
            android:id="@+id/zuling_layout_item_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="小明"
            android:textColor="@color/c242424"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zuling_layout_item_dingdan_statue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="已发货"
            android:textColor="@color/c006cb8"
            android:textSize="11sp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:padding="5dp">

        <ImageView
            android:id="@+id/zuling_layout_item_iv"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@mipmap/small" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/zuling_layout_item_iv"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/zuling_layout_container1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zuling_layout_item_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="山东临工SDLG全液压双缸压路机8140E"
                    android:textColor="@color/c242424"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/zuling_layout_item_shop_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:maxLines="1"
                    android:text="￥600"
                    android:textColor="@color/c242424"
                    android:textSize="15sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/zuling_layout_container2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/zuling_layout_item_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:text="产品型号:STR130-6"
                    android:textColor="@color/c797979"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/zuling_layout_item_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="12dp"
                    android:maxLines="1"
                    android:text="x1"
                    android:textColor="@color/c797979"
                    android:textSize="12sp" />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/yajin"
            android:textColor="@color/c797979"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zuling_layout_item_yajin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="￥5000"
            android:textColor="@color/c797979"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ceeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/zuqi"
            android:textColor="@color/c797979"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/zuling_layout_item_zuqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="6个月"
            android:textColor="@color/c797979"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2px"
        android:background="@color/ceeeeee" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="10dp">

        <TextView
            android:id="@+id/zuling_layout_item_shop_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="共1件商品"
            android:textColor="@color/c242424"
            android:textSize="14sp" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/heji"
            android:textColor="@color/c242424"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zuling_layout_item_hejijine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="666666"
            android:textColor="@color/ccf96a2f"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/zuling_layout_item_yunfei"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="(含运费￥10.00)"
            android:textColor="@color/c242424"
            android:textSize="14sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal"
        android:padding="10dp">


        <TextView
            android:id="@+id/zuling_layout_item_lianximaijia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_waiyuan_bg"
            android:text="@string/lianximaijia"
            android:textColor="@color/c666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/zuling_layout_item_chakanhetong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_waiyuan_bg"
            android:text="@string/chakanhetong"
            android:textColor="@color/c666666"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/zuling_layout_item_pay_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_solid_bg"
            android:text="@string/pay"
            android:textColor="@color/cffffff"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/zuling_layout_item_no_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_selecter_pay"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="@string/pay"
            android:textColor="@color/cffffff"
            android:textSize="11sp" />
    </LinearLayout>
</LinearLayout>