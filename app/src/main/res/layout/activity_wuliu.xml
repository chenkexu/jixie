<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F0EFF5">

    <include layout="@layout/base_top_bar_center" />


    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cb7b7b7"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:text="@string/wuliucon"/>
        <EditText
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/et_wuliu"
            android:editable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:hint="@string/wuliu_input_hint"
            android:textColor="@color/black"
            android:textColorHint="@color/c666666"
            android:textSize="13sp"/>
    </LinearLayout>

<View android:layout_width="match_parent"
    android:layout_height="0.5dp"
    android:background="@color/ccccccc"/>
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:orientation="horizontal">

        <TextView android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/cb7b7b7"
            android:textSize="13sp"
            android:paddingTop="10dp"
            android:layout_marginLeft="20dp"
            android:paddingBottom="10dp"
            android:text="@string/wuliu_id"/>
        <EditText
            android:inputType="number"
            android:id="@+id/et_wuliu_id"
            android:singleLine="true"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:layout_weight="1"
            android:background="@null"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"
            android:hint="@string/input_wuliu_id"
            android:textColor="@color/black"
            android:textColorHint="@color/c666666"
            android:textSize="13sp"/>
    </LinearLayout>




    <Button
        android:id="@+id/btn_user_feedback_submit"
        style="@style/common_btn_style"
         android:layout_height="40dp"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="32dp"
        android:layout_alignParentBottom="true"
        android:textSize="15dp"
        android:text="@string/tijiao" />
</LinearLayout>