<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/querendingdan_item_wudizhi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/cf7f6fb"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="10dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/tanhao" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/ninhaimeiyoushouhuodizhi"
            android:textColor="@color/c797979"
            android:textSize="12sp" />

    </LinearLayout>

    <include
        android:id="@+id/shouhuodizi_layout_container"
        layout="@layout/shouhuodizhi_layout"
        android:visibility="gone" />

</LinearLayout>